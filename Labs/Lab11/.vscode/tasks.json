{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Debug",    
            },
            "problemMatcher": [ ]
        },
        {
            "label": "make debug",
            "type": "shell",
            "command": "make",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Debug",    
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "/"]
            }
        },
        {
            "label": "cmake release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                ".."
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Release",    
            },
            "problemMatcher": [ ]
        },
        {
            "label": "make release",
            "type": "shell",
            "command": "make",
            "args": [],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Release",    
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "/"]
            }
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": true
    },
}